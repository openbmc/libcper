{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Type 3 context data (dataFormatType=3) - 64-bit value array",
  "additionalProperties": false,
  "required": ["valArray64"],
  "properties": {
    "valArray64": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["val64"],
        "additionalProperties": false,
        "properties": {
          "val64": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]{16}$"
          }
        }
      }
    },
    "data": {
      "type": "string",
      "pattern": "^[A-Za-z0-9+/]*={0,2}$"
    }
  }
}
