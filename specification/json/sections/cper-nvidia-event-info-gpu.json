{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "description": "GPU-specific event information for NVIDIA events",
    "required": [
        "EventOriginator",
        "SourcePartition",
        "SourceSubPartition",
        "Pdi"
    ],
    "additionalProperties": false,
    "properties": {
        "EventOriginator": {
            "type": "string",
            "description": "Event originator device type",
            "enum": [
                "Invalid",
                "Reserved1",
                "PF_GSP_FW",
                "VF_GSP_FW",
                "PF_DRIVER",
                "VF_DRIVER"
            ]
        },
        "SourcePartition": {
            "type": "integer",
            "minimum": 0
        },
        "SourceSubPartition": {
            "type": "integer",
            "minimum": 0
        },
        "Pdi": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{2}(:[0-9a-fA-F]{2}){7}$"
        }
    }
}
