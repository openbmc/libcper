{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "CPU-specific event information for NVIDIA events",
  "required": [
    "SocketNum",
    "Architecture",
    "Ecid1",
    "Ecid2",
    "Ecid3",
    "Ecid4",
    "InstanceBase"
  ],
  "additionalProperties": false,
  "properties": {
    "SocketNum": {
      "type": "integer",
      "minimum": 0
    },
    "Architecture": {
      "type": "object",
      "required": [
        "hidFam",
        "majorRev",
        "chipId",
        "minorRev",
        "preSiPlatform",
        "einjTag"
      ],
      "properties": {
        "hidFam": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15
        },
        "majorRev": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15
        },
        "chipId": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "minorRev": {
          "type": "integer",
          "minimum": 0,
          "maximum": 15
        },
        "preSiPlatform": {
          "type": "object",
          "required": ["raw", "value"],
          "properties": {
            "raw": {
              "type": "integer",
              "minimum": 0,
              "maximum": 31
            },
            "value": {
              "type": "string",
              "enum": ["Silicon", "PreSilicon"]
            }
          }
        },
        "einjTag": {
          "type": "boolean",
          "description": "Set by RAS FW if error was injected"
        }
      }
    },
    "Ecid1": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{8}$"
    },
    "Ecid2": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{8}$"
    },
    "Ecid3": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{8}$"
    },
    "Ecid4": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{8}$"
    },
    "InstanceBase": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{16}$"
    }
  }
}
