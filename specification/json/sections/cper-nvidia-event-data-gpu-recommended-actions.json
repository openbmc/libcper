{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "GPU recommended actions context data (GPU dataFormatType=0x8002)",
  "additionalProperties": false,
  "required": ["flags", "recoveryAction", "diagnosticFlow"],
  "properties": {
    "flags": {
      "type": "string",
      "description": "Action flags",
      "pattern": "^0x[0-9a-fA-F]{2}$"
    },
    "recoveryAction": {
      "type": "integer",
      "description": "Recovery action code",
      "minimum": 0
    },
    "diagnosticFlow": {
      "type": "integer",
      "description": "Diagnostic flow code (0=Unspecified)",
      "minimum": 0
    }
  }
}
