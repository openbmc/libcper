{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Type 4 context data (dataFormatType=4) - 32-bit value array",
  "additionalProperties": false,
  "required": ["valArray32"],
  "properties": {
    "valArray32": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["val32"],
        "additionalProperties": false,
        "properties": {
          "val32": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]{8}$"
          }
        }
      }
    },
    "data": {
      "type": "string",
      "pattern": "^[A-Za-z0-9+/]*={0,2}$"
    }
  }
}
