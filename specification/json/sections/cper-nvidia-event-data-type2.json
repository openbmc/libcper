{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Type 2 context data (dataFormatType=2) - 32-bit key-value pairs",
  "additionalProperties": false,
  "required": ["keyValArray32"],
  "properties": {
    "keyValArray32": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key32", "val32"],
        "additionalProperties": false,
        "properties": {
          "key32": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]{8}$"
          },
          "val32": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]{8}$"
          }
        }
      }
    },
    "data": {
      "type": "string",
      "pattern": "^[A-Za-z0-9+/]*={0,2}$"
    }
  }
}
